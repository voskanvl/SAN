mixin panel(type,title,img,offset)
    .panel&attributes(attributes)
        .panel__content
            .panel__title
                strong= type 
                span= title
            a.panel__next.next(href="#") 
                div Далее
                img.arrow_180(src="../../../../assets/icons/Arrow 1.png")
        - const left = offset && offset.left || ""
        - const top = offset &&  offset.top || ""
        img.panel__img(src=img, style=`left:${left}; top:${top};`)